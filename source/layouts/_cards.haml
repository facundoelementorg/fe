.row
  .small-12.columns
    .row
      - blog.articles.each do |article|
        .small-12.large-6.columns
          %a{:href => article.url}
            .cards
              %img.cards__splashimage{:src => "/projects/#{article.title}/#{article.data.splashimage}", :alt => "Main Photo of #{article.title}"} 
              %h2
                = article.title
              //%time= article.date.strftime('%b %e, %Y')
              %h4= article.data.summary